<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Apartment Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-blue-900 text-white flex flex-col">
        <div class="p-6 text-center text-2xl font-bold border-b border-blue-700">
            Apartment Manager
        </div>
        <nav class="flex-grow p-4">
            <ul class="space-y-2">
                <li>
                    <a href="#" class="block px-4 py-2 rounded hover:bg-blue-700">Dashboard</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 rounded hover:bg-blue-700">Apartments</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 rounded hover:bg-blue-700">Tenants</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 rounded hover:bg-blue-700">Payments</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 rounded hover:bg-blue-700">Reports</a>
                </li>
            </ul>
        </nav>
        <div class="p-4 border-t border-blue-700">
            <button class="w-full bg-red-600 hover:bg-red-700 py-2 rounded">Logout</button>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow p-6">
        <!-- Dashboard Header -->
        <header class="mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
            <p class="text-gray-600">Welcome to the Admin Dashboard</p>
        </header>

        <!-- Statistics Section -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="p-4 bg-white shadow rounded-lg">
                <h2 class="text-lg font-semibold text-gray-700">Total Apartments</h2>
                <p class="text-2xl font-bold text-gray-900">120</p>
            </div>
            <div class="p-4 bg-white shadow rounded-lg">
                <h2 class="text-lg font-semibold text-gray-700">Occupied Units</h2>
                <p class="text-2xl font-bold text-gray-900">85</p>
            </div>
            <div class="p-4 bg-white shadow rounded-lg">
                <h2 class="text-lg font-semibold text-gray-700">Pending Payments</h2>
                <p class="text-2xl font-bold text-gray-900">15</p>
            </div>
        </section>

        <!-- Table Section -->
        <section class="bg-white shadow rounded-lg p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Tenants</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="text-gray-600 uppercase text-sm border-b">
                            <th class="py-3 px-4">Name</th>
                            <th class="py-3 px-4">Apartment</th>
                            <th class="py-3 px-4">Move-in Date</th>
                            <th class="py-3 px-4">Status</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700">
                        <tr>
                            <td class="py-3 px-4">John Doe</td>
                            <td class="py-3 px-4">Apt 101</td>
                            <td class="py-3 px-4">2023-01-15</td>
                            <td class="py-3 px-4"><span class="text-green-600 font-semibold">Active</span></td>
                        </tr>
                        <tr class="bg-gray-50">
                            <td class="py-3 px-4">Jane Smith</td>
                            <td class="py-3 px-4">Apt 203</td>
                            <td class="py-3 px-4">2023-02-10</td>
                            <td class="py-3 px-4"><span class="text-red-600 font-semibold">Inactive</span></td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>
